<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ConsultasActivity">

    <TextView
        android:id="@+id/txt_consulta"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.1"
        android:fontFamily="@font/alegreya"
        android:text="@string/consultas"
        android:textAlignment="textStart"
        android:textColor="@color/fonts"
        android:textSize="26sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerConsultas_prof"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:layout_margin="10dp"
        android:background="@drawable/spinner_consultas"
        >

    </Spinner>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/swipeRefreshTL"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_margin="10dp"
        >
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_consultas"
        android:background="@color/rectangle_pink"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:layout_margin="10dp"
        ></androidx.recyclerview.widget.RecyclerView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>