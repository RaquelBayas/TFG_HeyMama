<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.PerfilActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/layout_image"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center|end"
                android:scaleType="fitXY"
                app:layout_collapseMode="parallax"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="148dp"
                android:layout_height="148dp"
                android:layout_marginTop="68dp"
                app:civ_border_color="@color/wine_1"
                app:civ_border_width="2dp"
                app:layout_constraintEnd_toEndOf="@+id/layout_image"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="@+id/layout_image"
                app:layout_constraintTop_toTopOf="@+id/layout_image" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_user_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya"
            android:text="TextView"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/fonts"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/txt_biografia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="bio"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_bold"
            tools:ignore="SpeakableTextPresentCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_amigos"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:layout_weight="0.25"
                android:layout_marginTop="10dp"

                android:background="@drawable/rectangle_orange"
                android:fontFamily="@font/alegreya"
                android:text="@string/amigos"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_mensajes"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle_orange"
                android:fontFamily="@font/alegreya"
                android:text="@string/mensajes"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_perfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_amigos" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="417dp"
        android:layout_height="424dp"
        android:layout_marginStart="2dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"

        android:background="@color/white"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/nav_bar_bottom_menu">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"></FrameLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</LinearLayout>