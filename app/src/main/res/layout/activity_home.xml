<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:forceDarkAllowed="false"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HomeActivity"
    tools:ignore="SpeakableTextPresentCheck">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include
                layout="@layout/app_bar_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"

                android:fontFamily="@font/alegreya"
                android:textColor="@color/fonts"
                android:textSize="26sp"
                tools:text="Bienvenida Raquel" />

            <TextView
                android:id="@+id/txt_howdoyoufeel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alegreya"
                android:text="@string/comotesientes"
                android:textColor="@color/fonts"
                android:textSize="20sp" />

            <HorizontalScrollView
                android:id="@+id/moodtracking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_mood_home_feliz"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:background="@color/pink2"
                        android:src="@drawable/happy"
                        />
                    <ImageButton
                        android:id="@+id/btn_mood_home_bien"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:background="@color/rectangle_purple"
                        android:src="@drawable/fine"
                        />
                    <ImageButton
                        android:id="@+id/btn_mood_home_regular"
                        android:layout_width="60dp"
                        android:background="@color/rectangle_orange"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/regular"
                        />
                    <ImageButton
                        android:id="@+id/btn_mood_home_mal"
                        android:layout_width="60dp"
                        android:background="#FFC0C0"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/angry"
                        />
                    <ImageButton
                        android:id="@+id/btn_mood_hom_triste"
                        android:layout_width="60dp"
                        android:background="#D589BFEF"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/sad"
                        />

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_foros_home"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.3"
                    android:background="@drawable/rectangle_pink"
                    android:fontFamily="@font/alegreya"
                    android:text="@string/foros"
                    android:textAlignment="gravity"
                    android:textColor="@color/fonts"
                    android:textSize="30sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_info_home"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.3"
                    android:background="@drawable/rectangle_orange"
                    android:fontFamily="@font/alegreya"
                    android:text="@string/informacion"
                    android:textAlignment="gravity"
                    android:textColor="@color/fonts"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="vertical">

                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/bottomNavigationView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    app:itemIconTint="@color/gray"
                    android:background="@color/white"
                    app:labelVisibilityMode="unlabeled"
                    app:menu="@menu/nav_bar_bottom_menu_admin">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </com.google.android.material.bottomnavigation.BottomNavigationView>
            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_menu"
        app:menu="@menu/nav_menu" >
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>