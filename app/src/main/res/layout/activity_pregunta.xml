<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    tools:context=".activities.PreguntaActivity">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txt_titulo_foro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rectangle_edit_article"
        android:fontFamily="@font/alegreya"
        android:hint="Introduce el tÃ­tulo de tu pregunta"
        android:minHeight="48dp"
        android:padding="5dp"
        android:textColor="@color/fonts"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txt_descripcion_foro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="80dp"
        android:autoText="false"
        android:background="@drawable/rectangle_edit_article"
        android:cursorVisible="true"
        android:fontFamily="@font/alegreya"
        android:gravity="start"
        android:hint="Introduce tu pregunta"
        android:padding="5dp"
        android:textColor="@color/fonts"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_foro"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_enviar"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rectangle_edit_article"
        android:fontFamily="@font/baloo"
        android:text="@string/enviar"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.907"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_descripcion_foro" />

    <RadioGroup
        android:id="@+id/btn_foro_protected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_enviar"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_descripcion_foro"
        app:layout_constraintVertical_bias="0.45">

        <RadioButton
            android:id="@+id/btn_publico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="@string/publico"
            android:textColor="@color/fonts"
            android:textSize="16sp"
            android:layout_margin="5dp"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="732dp"/>

        <RadioButton
            android:id="@+id/btn_privado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="@string/privado"
            android:textColor="@color/fonts"
            android:textSize="16sp"
            android:layout_margin="5dp"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="732dp"
    />

</RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>